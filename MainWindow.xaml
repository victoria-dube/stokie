<Window x:Class="stokieinventryapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stockie Inventory" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar buttons -->
        <StackPanel Grid.Column="0" Background="LightGray">
            <Button Content="Inventory" Click="Inventory_Click"/>
            <Button Content="Suppliers" Click="Suppliers_Click"/>
            <Button Content="Orders" Click="Orders_Click"/>
            <Button Content="Reports" Click="Reports_Click"/>
        </StackPanel>

        <!-- Dynamic content -->
        <ContentControl x:Name="MainContent" Grid.Column="1"/>
    </Grid>
</Window>
